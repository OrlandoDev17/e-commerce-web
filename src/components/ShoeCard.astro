---
const { shoe } = Astro.props;
---

<picture>
  <img
    class="rounded-xl relative -top-10"
    src={shoe.images[0]}
    alt={`Imagen del Zapato: ${shoe.name}`}
  />
</picture>
<div class="flex flex-col">
  <span class="text-xl text-neutral-400">{shoe.maker}</span>
  <h2
    class="font-bricolage-grotesque font-bold tracking-wide text-2xl my-3 h-16 flex"
  >
    {shoe.name}
  </h2>
  <span class="text-xl tracking-widest font-bold text-neutral-400">
    ${shoe.price}.00
  </span>
</div>
<div class="mt-12 flex justify-center">
  <button>
    <a
      class="px-28 text-white font-bold tracking-wider border-2 py-4 rounded hover:scale-110 hover:bg-blue-600 transition"
      href={`/Shoes/${shoe.id}`}
    >
      AGREGAR AL CARRITO
    </a>
  </button>
</div>
