---
import Cart from '../icons/Cart.astro';
import User from '../icons/User.astro';
---

<header class="flex justify-between px-8 pt-6">
  <picture class="w-80">
    <img src="/logo.png" alt="Logo de SneakerStore" />
  </picture>
  <aside class="flex gap-x-4 mt-4 md:mt-2">
    <button
      class="bg-neutral-500 flex items-center justify-center rounded-full w-28 h-28 md:w-[72px] md:h-[72px] hover:scale-125 transition"
    >
      <a href="#">
        <Cart className="w-20 md:w-12" />
      </a>
    </button>
    <button
      class="bg-neutral-500 flex items-center justify-center rounded-full w-28 h-28 md:w-[72px] md:h-[72px] hover:scale-125 transition"
    >
      <a href="#">
        <User className="w-20 md:w-12" />
      </a>
    </button>
  </aside>
</header>
